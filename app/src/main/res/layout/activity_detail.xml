<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.DetailActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="Ini title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:src="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:contentDescription="@string/lining" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:background="#03fc13"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <LinearLayout
        android:id="@+id/linier1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Umur" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="asdasdasd" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linier2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linier1">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Hasil" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="asdasdasd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linier3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linier2">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Potensi hasil" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="asdasdasd" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/lining"
        android:scaleType="fitXY"
        android:src="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linier3" />

    <LinearLayout
        android:id="@+id/linier4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Luas Lahan" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text=":" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:hint="Luas Lahan" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
